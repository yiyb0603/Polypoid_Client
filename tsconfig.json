{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"],
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  }
}
